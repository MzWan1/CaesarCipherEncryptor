<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>InitializeServlet</servlet-name>
        <servlet-class>za.ac.tut.web.servlet.InitializeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EncryptMessageServlet</servlet-name>
        <servlet-class>za.ac.tut.web.servlet.EncryptMessageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>za.ac.tut.web.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewAllDecryptedMessagesServlet</servlet-name>
        <servlet-class>za.ac.tut.web.servlet.ViewAllDecryptedMessagesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewBestPerformingFieldAgentServlet</servlet-name>
        <servlet-class>za.ac.tut.web.servlet.ViewBestPerformingFieldAgentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InitializeServlet</servlet-name>
        <url-pattern>/InitializeServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EncryptMessageServlet</servlet-name>
        <url-pattern>/EncryptMessageServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewAllDecryptedMessagesServlet</servlet-name>
        <url-pattern>/ViewAllDecryptedMessagesServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewBestPerformingFieldAgentServlet</servlet-name>
        <url-pattern>/ViewBestPerformingFieldAgentServlet.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <context-param>
        <param-name>compName</param-name>
        <param-value>Siri</param-value>
    </context-param>
    <security-constraint>
        <display-name>AgentConstraint</display-name>
        <web-resource-collection>
            <web-resource-name>AgentResource</web-resource-name>
            <description>Resources available to the agent</description>
            <url-pattern>/encrypt_message.html</url-pattern>
            <url-pattern>/EncryptMessageServlet.do</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>agent</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>ManagerConstraint</display-name>
        <web-resource-collection>
            <web-resource-name>Manager Resource</web-resource-name>
            <description>Resources available to the manager</description>
            <url-pattern>/ViewAllDecryptedMessagesServlet.do</url-pattern>
            <url-pattern>/ViewBestPerformingFieldAgentServlet.do</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>manager</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>file</realm-name>
        <form-login-config>
            <form-login-page>/Login.jsp</form-login-page>
            <form-error-page>/LoginError.jsp</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description>The field agent role</description>
        <role-name>agent</role-name>
    </security-role>
    <security-role>
        <description>The field manager role</description>
        <role-name>manager</role-name>
    </security-role>
    <error-page>
        <error-code>403</error-code>
        <location>/access_denied.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/NotFound.jsp</location>
    </error-page>
</web-app>
